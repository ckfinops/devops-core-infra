{
"agent": {"metrics_collection_interval": 60},
"metrics": {
"append_dimensions": {"AutoScalingGroupName": "${aws:AutoScalingGroupName}", "InstanceId": "${aws:InstanceId}"},
"metrics_collected": {"cpu": {"measurement": ["usage_active"], "total": true}, "mem": {"measurement": ["mem_used_percent"]}}
},
"logs": {"logs_collected": {"files": {"collect_list": [{"file_path": "/opt/app/logs/*.log", "log_group_name": "{{ cloudwatch_log_group_app }}", "log_stream_name": "{instance_id}"}]}}}
}